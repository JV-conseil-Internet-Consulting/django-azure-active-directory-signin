{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install",
      "type": "shell",
      "linux": {
        "command": ".bash/osx/install.sh && .bash/osx/launch.sh"
      },
      "osx": {
        "command": ".bash/osx/install.sh && .bash/osx/launch.sh"
      },
      "detail": "Install a Django Virtual Environment with Poetry and/or Pipenv for this project",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Launch",
      "type": "shell",
      "isBackground": true,
      "linux": {
        "command": ".bash/osx/launch.sh"
      },
      "osx": {
        "command": ".bash/osx/launch.sh"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "detail": "Launch a Django Virtual Environment for this project",
      "problemMatcher": []
    },
    {
      "label": "PyPi",
      "type": "shell",
      "linux": {
        "command": ".bash/osx/pypi.sh"
      },
      "osx": {
        "command": ".bash/osx/pypi.sh"
      },
      "detail": "Publish this project to Pypi",
      "problemMatcher": []
    },
    {
      "label": "Update",
      "type": "shell",
      "linux": {
        "command": ".bash/osx/update.sh"
      },
      "osx": {
        "command": ".bash/osx/update.sh"
      },
      "detail": "Udpate dependencies.",
      "problemMatcher": []
    },
    {
      "label": "Shell",
      "type": "shell",
      "linux": {
        "command": ".bash/osx/shell.sh"
      },
      "osx": {
        "command": ".bash/osx/shell.sh"
      },
      "detail": "Poetry Shell to run commands like: python manage.py makemigrations.",
      "problemMatcher": []
    },
    {
      "label": "Test",
      "type": "shell",
      "linux": {
        "command": ".bash/osx/tests.sh"
      },
      "osx": {
        "command": ".bash/osx/tests.sh"
      },
      "detail": "Run PyTest",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
